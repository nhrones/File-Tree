{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "RUN APP",
         "type": "shell",
         "command": "serve dist",
         "presentation": {
            "reveal": "always",
            "focus": true,
            "panel": "new",
            "clear": true,
            "showReuseMessage": false
         },
         "problemMatcher": [
            "$deno"
         ]
      },
      {
         "type": "deno",
         "command": "run",
         "args": [ "-A", "--unstable", "server.ts"],
         "problemMatcher": [
            "$deno"
         ],
         "label": "RUN LOCAL",
      }
   ]
}