   "version": "2.0.0",
   "tasks": [
      {
         "label": "RUN LOCAL SERVICE",
         "type": "shell",
         "windows": {
            "command": "deno task start",
         },
         "group": "none",
         "presentation": {
            "reveal": "always",
            "focus": true,
            "panel": "new",
            "clear": true,
            "showReuseMessage": false
         },
         "problemMatcher": [
            "$deno"
         ],
      },
      {
         "label": "RUN APP",
         "type": "shell",
         "command": "serve dist",
         "presentation": {
            "reveal": "always",
            "focus": true,
            "panel": "new",
            "clear": true,
            "showReuseMessage": false
         },
         "problemMatcher": [
            "$deno"
         ],
      }
   ]
}